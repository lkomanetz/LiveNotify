{
	"manifest_version": 2,
    "name": "LiveNotify",
    "description": "Sends desktop notifications when somebody mentions you during chat.",
    "version": "1.0",
    "permissions": [
        "notifications",
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [{
        "matches": ["*://*.livestream.com/*"],
        "js": [
            "contentScript.js",
            "messageProcessor.js"
        ],
        "run_at": "document_end"
    }]
}