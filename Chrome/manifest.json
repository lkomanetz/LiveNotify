{
	"manifest_version": 2,
    "name": "LiveNotify",
    "description": "Sends desktop notifications when somebody mentions you during chat.",
    "version": "1.0",
    "permissions": [
        "notifications",
        "storage",
        "tabs",
        "declarativeContent"
    ],
    "icons": {
        "16": "icons/exclamation_mark.png",
        "48": "icons/exclamation_mark.png",
        "128": "icons/exclamation_mark.png"
    },
    "background": {
        "scripts": [
            "services/pageActionService.js",
            "services/notificationService.js"
        ]
    },
    "content_scripts": [{
        "matches": ["*://*.livestream.com/*"],
        "js": [
            "main.js",
            "processors/messageProcessor.js"
        ],
        "run_at": "document_end"
    }],
    "page_action": {
        "default_title": "LiveNotify",
        "default_icon": {
            "19": "icons/exclamation_mark.png",
            "38": "icons/exclamation_mark.png"
        },
        "default_popup": "pageActions/defineHandle.html"
    }
}